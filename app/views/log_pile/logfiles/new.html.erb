<div class="well">
  <%= form_for @file do |f| %>
    <fieldset>
      <legend>Add log file</legend>
      <div class="clearfix">
        <%= f.label :name %>
        <div class="input">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="clearfix">
        <%= f.label :path %>
        <div class="input">
          <%= f.text_field :path %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Add", :class => "btn primary" %>
        <%= link_to "Cancel", logfiles_path, :class => "btn" %>
      </div>
    </fieldset>
  <% end %>	
</div>
